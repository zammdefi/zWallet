    const nonce = await wallet.getNonce();
    
    const tx = await wallet.sendTransaction({
      to: ZROUTER_ADDRESS,
      data: callData,
      value: msgValue,
      nonce: nonce
    });
    
    document.getElementById("swapStatus").innerHTML = `<div style="color: var(--info)">Transaction sent: ${tx.hash.slice(0, 10)}...</div>`;
    
